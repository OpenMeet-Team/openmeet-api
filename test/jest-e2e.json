{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", {
      "isolatedModules": true,
      "tsconfig": {
        "allowJs": true
      }
    }]
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(matrix-js-sdk)/)"
  ],
  "moduleNameMapper": {
    "^matrix-js-sdk$": "<rootDir>/mocks/matrix/matrix-js-sdk.ts"
  },
  "setupFiles": [
    "dotenv/config"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/jest-setup.ts"
  ],
  "testTimeout": 30000,
  "forceExit": true
}