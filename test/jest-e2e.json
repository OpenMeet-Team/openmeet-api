{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", {
      "isolatedModules": true,
      "tsconfig": {
        "allowJs": true
      }
    }]
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(matrix-js-sdk)/)"
  ]
}
