<mjml>
  <mj-head>
    <mj-attributes>
      <mj-all font-family="Inter, sans-serif" />
      <mj-text font-size="15px" color="#1E1A43" line-height="5px" />
      <mj-button font-size="15px" color="#1E1A43" font-weight="700" border-radius="6px" />
    </mj-attributes>
  </mj-head>
  <mj-body background-color="#F5F5FA">
    <!-- Header -->
    <mj-section background-color="#ffffff" padding="20px" border-radius="10px">
      <mj-column>

        <% if (tenantConfig.logoUrl) { %>
          <mj-image src="<%= tenantConfig.logoUrl %>" alt="<%= tenantConfig.name %>" width="150px"
            href="<%= tenantConfig.frontendDomain %>" />
          <% } %>

            <mj-text align="center" color="#1E1A43" font-size="24px" font-weight="600">
              Welcome to <%= tenantConfig.name %>
            </mj-text>
      </mj-column>
    </mj-section>