<mjml>
  <mj-head>
    <%- include('../layouts/header') %>
  </mj-head>
  <mj-body>
    <mj-section>
      <mj-column>
        <!-- Logo -->
        <mj-image 
          width="150px" 
          src="<%= tenantConfig.logoUrl || 'https://openmeet.net/logo.png' %>" 
          alt="<%= tenantConfig.name %>"
        />
        
        <!-- Header -->
        <mj-text font-size="24px" font-weight="bold" color="#059669" align="center">
          ðŸŽ‰ Event Update
        </mj-text>
        
        <mj-text font-size="18px" font-weight="600" color="#333333" align="center">
          <%= eventTitle %>
        </mj-text>
        
        <mj-text font-size="14px" color="#666666" align="center">
          From: <%= authorName %>
        </mj-text>
        
        <mj-divider border-width="2px" border-color="#059669" />
        
        <!-- Message Content -->
        <mj-text font-size="16px" line-height="1.6" color="#333333">
          <%- htmlContent %>
        </mj-text>
        
        <mj-divider border-width="1px" border-color="#e0e0e0" />
        
        <!-- Action Button -->
        <mj-button 
          background-color="#059669" 
          color="#ffffff"
          href="<%= tenantConfig.frontendDomain %>/events/<%= event.slug %>"
        >
          View Event
        </mj-button>
        
        <!-- Footer -->
        <mj-text font-size="12px" color="#999999" align="center">
          This message was sent to all attendees of <%= eventTitle %>.
          <br/>
          To manage your notification preferences, visit your account settings.
        </mj-text>
        
        <!-- Company Footer -->
        <%- include('../layouts/footer') %>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>