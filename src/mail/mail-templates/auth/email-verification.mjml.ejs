<%- include('./../layouts/header.mjml.ejs') %>

      <!-- Main Content -->
      <mj-section>
        <mj-column>

          <mj-text>
            Hi <%= name %>,
          </mj-text>

          <mj-text>
            You've registered to attend <strong><%= eventName %></strong>!
          </mj-text>

          <mj-text>
            Here's your sign-in code:
          </mj-text>

        </mj-column>
      </mj-section>

      <!-- Verification Code -->
      <mj-section padding="20px" background-color="#F5F5FA" border-radius="8px">
        <mj-column>
          <mj-text align="center" font-size="36px" font-weight="700" color="#7B71DA" letter-spacing="8px" padding="20px">
            <%= code %>
          </mj-text>
        </mj-column>
      </mj-section>

      <!-- Instructions -->
      <mj-section>
        <mj-column>
          <mj-text>
            Enter this code on the verification page to complete your sign-in.
          </mj-text>

          <mj-text color="#666666" font-size="14px">
            This code will expire in 7 days.
          </mj-text>
        </mj-column>
      </mj-section>

      <!-- Button -->
      <mj-section padding="20px">
        <mj-column>
          <mj-button href="<%= tenantConfig?.frontendDomain %>" background-color="#7B71DA" color="#FFFFFF" font-size="16px">
            Visit <%= tenantConfig?.name %>
          </mj-button>
        </mj-column>
      </mj-section>

<%- include('./../layouts/footer.mjml.ejs') %>
