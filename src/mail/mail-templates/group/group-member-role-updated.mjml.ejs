<%- include('./../layouts/header.mjml.ejs') %>

      <!-- Main Content -->
      <mj-section padding="20px">
        <mj-column>

          <% if (groupMember?.user?.name) { %>
            <mj-text>
              Hello <%= groupMember?.user?.name %>,
            </mj-text>
          <% } %>

          <mj-text>
            Your role on the group <strong>
              <a href="<%= tenantConfig?.frontendDomain + '/groups/' + groupMember?.group?.slug %>"><%= groupMember?.group?.name %></a>
            </strong> has been updated to <strong>
              <%= groupMember?.groupRole?.name %>
            </strong>.
          </mj-text>

          <mj-text>
            Please review your role on the group.
          </mj-text>
        </mj-column>
      </mj-section>

      <!-- Button -->
      <mj-section padding="20px">
        <mj-column>
          <mj-button href="<%= tenantConfig?.frontendDomain + '/groups/' + groupMember?.group?.slug %>" background-color="#7B71DA" color="#FFFFFF" font-size="16px">
            View Group
          </mj-button>
        </mj-column>
      </mj-section>

<%- include('./../layouts/footer.mjml.ejs') %>