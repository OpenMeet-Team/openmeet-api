<%- include('./../layouts/header.mjml.ejs') %>

      <!-- Main Content -->
      <mj-section padding="20px">
        <mj-column>

          <% if (groupMember?.user?.name) { %>
            <mj-text>
              Hello <%= groupMember?.user?.name %>,
            </mj-text>
          <% } %>

          <mj-text>
            A new member, <strong>
              <%= groupMember?.user?.name %>
            </strong>, has joined your group "<strong>
              <%= group?.name %>
            </strong>".
          </mj-text>

          <mj-text>
            Please review the group and its members.
          </mj-text>
        </mj-column>
      </mj-section>

      <!-- Button -->
      <mj-section padding="20px">
        <mj-column>
          <mj-button href="<%= tenantConfig?.frontendDomain + '/group/' + group?.slug %>" background-color="#7B71DA" color="#FFFFFF" font-size="16px">
            View Group
          </mj-button>
        </mj-column>
      </mj-section>

<%- include('./../layouts/footer.mjml.ejs') %>