<mjml>
  <mj-head>
    <mj-title><%= (tenantConfig && tenantConfig.tenantName) || 'OpenMeet' %> - New Group Member</mj-title>
    <mj-preview>New member joined your group</mj-preview>
    <mj-attributes>
      <mj-all font-family="Inter, sans-serif" />
      <mj-text font-size="15px" color="#1E1A43" />
      <mj-button font-size="15px" color="#1E1A43" font-weight="700" border-radius="6px" />
    </mj-attributes>
  </mj-head>
  <mj-body background-color="#F5F5FA">
    <%- include('./../layouts/header.mjml.ejs', { tenantConfig: tenantConfig }) %>

    <!-- Main Content -->
    <mj-section>
      <mj-column>
        <mj-text>
          Hello,
        </mj-text>

        <mj-text>
          A new group member <strong>
            <a href="<%= (tenantConfig?.frontendDomain || '#') + '/members/' + groupMember?.user?.slug %>"><%= groupMember?.user?.firstName %> <%= groupMember?.user?.lastName %></a>
          </strong>, has requested to join your group <strong>
            <a href="<%= (tenantConfig?.frontendDomain || '#') + '/groups/' + groupMember?.group?.slug %>"><%= groupMember?.group?.name %></a>
          </strong>.
        </mj-text>

        <mj-text>
          Please review their request and change their role on the group.
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Button -->
    <mj-section padding="20px">
      <mj-column>
        <mj-button href="<%= (tenantConfig?.frontendDomain || '#') + '/groups/' + groupMember?.group?.slug %>" background-color="#7B71DA" color="#FFFFFF" font-size="16px">
          View Group
        </mj-button>
      </mj-column>
    </mj-section>

    <%- include('./../layouts/footer.mjml.ejs', { tenantConfig: tenantConfig }) %>
  </mj-body>
</mjml>